{
    "family": "inventory-task",
    "containerDefinitions": [
        {
            "name": "inventory-app",
            "image": "<IMAGE_PLACEHOLDER>",
            "secrets": [
                {
                    "name": "MONGO_URI",
                    "valueFrom": "/alegra/MONGO_URI"
                },
                {
                    "name": "PURCHASE_URL",
                    "valueFrom": "/alegra/PURCHASE_URL"
                }
            ],
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3002,
                    "hostPort": 3002
                }
            ]
        }
    ]
}
{
    "family": "orders-task",
    "executionRoleArn": "ecsInstanceRole",
    "containerDefinitions": [
        {
            "name": "orders-app",
            "image": "<IMAGE_PLACEHOLDER>",
            "secrets": [
                {
                    "name": "REDIS_URL",
                    "valueFrom": "/alegra/REDIS_URL"
                },
                {
                    "name": "PGSQL_DATABASE_URL",
                    "valueFrom": "/alegra/PGSQL_DATABASE_URL"
                }
            ],
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ]
        }
    ]
}
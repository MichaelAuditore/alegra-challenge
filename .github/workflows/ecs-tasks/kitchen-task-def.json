{
    "family": "kitchen-task",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "kitchen-app",
            "image": "<IMAGE_PLACEHOLDER>",
            "secrets": [
                {
                    "name": "REDIS_URL",
                    "valueFrom": "/alegra/REDIS_URL"
                },
                {
                    "name": "PGSQL_DATABASE_URL",
                    "valueFrom": "/alegra/PGSQL_DATABASE_URL"
                },
                {
                    "name": "WS_INVENTORY",
                    "valueFrom": "/alegra/WS_INVENTORY"
                }
            ],
            "memory": 512,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 3001
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "kitchen-app",
                    "awslogs-region": "TO_BE_REPLACED",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}